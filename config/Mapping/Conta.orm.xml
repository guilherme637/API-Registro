<?xml version="1.0" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Entity\Conta" table="conta" repository-class="App\Repository\ContaRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="nome" type="string" length="100" nullable="false"/>
        <field name="valor" type="float" nullable="false"/>
        <field name="data" type="date" nullable="false"/>
        <field name="dataFeedBack" type="string" nullable="true"/>

        <many-to-one field="grupo" target-entity="App\Entity\Grupo" inversed-by="conta">
            <join-column nullable="false"/>
        </many-to-one>

        <many-to-one field="financa" target-entity="App\Entity\Financa" inversed-by="conta">
            <join-column name="financa_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>